 <%- model_class = Student -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.update', 'For Sale'] %></h1>
</div>
 
<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @housing.housephoto.url(:medium) %>
        <div class="table-responsive"></div>
        <table class="table">
          <tbody>
            <tr>
              <td><strong>Title:</strong></td>
              <td><%= @housing.housingTitle %> </td>
            </tr>
            <tr>
              <td><strong>Price:</strong></td>
              <td>$ <%=  @housing.housePrice %> </td>
            </tr>


            <tr>
              <td><strong>Available Now:</strong></td>
              <% if @housing.availableDate? %>
                <td> Yes </td>
              <% else %>
                <td> No </td>
              <% end %>
            </tr>
            <tr>
            <tr>
              <td><strong>Seller email:</strong></td>
              <td><%= @housing.housingemail %> </td>
            </tr>

           <tr>
              <td><strong>Homedescription:</strong></td>
              <%= @housing.homeDescription %>
            </tr>


          </tbody>
        </table>
        
      </div>

    </div>
  </div>

</div>
 
  <%  if (student_signed_in? && (current_student.id == @housing.student_id)) %>

            <%= link_to t('.back', :default => t("helpers.links.back")),
                          housings_path, :class => 'btn btn-default'  %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_housing_path(@housing), :class => 'btn btn-default' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          housing_path(@housing),
                          :method => 'delete',
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-danger' %>
  
  

  <% end %>



<% if student_signed_in? && current_student.id != @housing.student_id %>  <!-- good one here -->

           <%= link_to "Send Message to Owner", "#", class: "btn btn-success btn-xs start-conversation",
                              "data-sid" => current_student.id, "data-rip" =>  @housing.student_id %>

<% end -%>




















