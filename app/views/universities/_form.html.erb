<%= form_for @university, :html => { :class => "form-horizontal book",  } do |f| %>

  <% if @university.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@university.errors.count, "error") %> prohibited this university from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @university.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div> 
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' , placeholder: "required", :required => true %>
    </div>
    <%=f.error_span(:name) %>
  </div>

  <div class="form-group">
    <%= f.label :website, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :website, :class => 'form-control' %>
    </div>
    <%=f.error_span(:website) %>
  </div>

  <div class="form-group">
    <%= f.label :domain_Edu, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :domainEdu, :class => 'form-control' %>
    </div>
    <%=f.error_span(:domainEdu) %>
  </div>

  


  <div class="form-group">
    <%= f.label :university_photo, class: 'col-sm-2 control-label' %>
    <div class="col-lg-10"> <!-- class="col-sm-6" -->
      <%= f.file_field :university_photo, :required => true, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                universities_path, :class => 'btn btn-default' %>
    </div>
  </div> 
<% end %>
















