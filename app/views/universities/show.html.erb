 <%- model_class = Student -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.update', 'university'] %></h1>
</div>
 
<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @university.university_photo.url(:medium) %>
        <div class="table-responsive"></div>
        <table class="table">
          <tbody>
            <tr>
              <td><strong>Name:</strong></td>
              <td><%= @university.name %> </td>
            </tr>

            <tr>
              <td><strong>website:</strong></td>
              <td><%= @university.website %> </td>
            </tr>

            <tr>
              <td><strong>domain Edu:</strong></td>
              <td><%= @university.domainEdu %> </td>
            </tr>
          </tbody>
        </table>
        
      </div>

    </div>
  </div>

</div>
 




<% if @university.students.include? current_student %>
        <p class="joinleave"><%= link_to 'leave this university', leave_student_university_path(@university), method: :delete %></p>
    <% end %>
  <!-- if there is a current user, and user is no in the event, show join event option, continues to the event page -->
    <% if @university.students.exclude? current_student %>
    <p class="joinleave"><%= link_to 'join university', join_student_university_path(@university, continue: university_url(@university)), method: :post %></p>
    <% end %>



  <% if current_student[:admin] == true %>
            <%= link_to t('.back', :default => t("helpers.links.back")),
                          universities_path, :class => 'btn btn-default'  %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_university_path(@university), :class => 'btn btn-default' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          university_path(@university),
                          :method => 'delete',
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-danger' %>
 

  <% end -%> 









