              <td>$ <%=  @tutor.classTeaching %> </td>
            </tr>


            <tr>
              <td><strong>Available Now:</strong></td>
              <% if @tutor.availabletutor? %>
                <td> Yes </td>
              <% else %>
                <td> No </td>
              <% end %>
            </tr>


            <tr>
              <td><strong>Schedule:</strong></td>
              <td><%= @tutor.schedule %> </td>
            </tr>
            <tr>

            <tr>
              <td><strong>tutor description:</strong></td>
              <td><%= @tutor.tutorDescription %> </td>
            </tr>
            <tr>
              <td><strong>Tutor email:</strong></td>
              <td><%= @tutor.emailtutor %> </td>
            </tr>

          </tbody>
        </table>
        
      </div>

    </div>
  </div>

</div>
 
