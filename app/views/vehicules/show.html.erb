 <%- model_class = Student -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.update', 'For Sale'] %></h1>
</div>
 
<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @vehicule.vehicule_photo.url(:medium) %>
        <div class="table-responsive"></div>
        <table class="table">
          <tbody> 
            <tr>
              <td><strong>Title:</strong></td>
              <td><%= @vehicule.vehiculeTitle %> </td>
            </tr>
            <tr>
              <td><strong>Price:</strong></td>
              <td>$ <%=  @vehicule.vehiculePrice %> </td>
            </tr>
            <tr>
              <td><strong>Available Now:</strong></td>
              <% if @vehicule.availableNow? %>
                <td> Yes </td>
              <% else %>
                <td> No </td>
              <% end %>
            </tr>


              
      
     

            <tr>
              <td><strong>description:</strong></td>
              <td><%= @vehicule.vehiculeDescription %> </td>
            </tr>
            <tr>
              <td><strong>Seller email:</strong></td>
              <td><%= @vehicule.student_id%> </td>
            </tr>

          </tbody>
        </table>
        
      </div>

    </div>
  </div>

</div>
 
  <%  if (student_signed_in? && (current_student.id == @vehicule.student_id)) %>

            <%= link_to t('.back', :default => t("helpers.links.back")),
                          vehicules_path, :class => 'btn btn-default'  %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_vehicule_path(@vehicule), :class => 'btn btn-default' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                         vehicule_path(@vehicule),
                          :method => 'delete',
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-danger' %>
  
  

  <% end %>


<% if (student_signed_in? && (current_student.id != @vehicule.student_id)) %>  <!-- good one here -->

           <%= link_to "Send Message to Owner", "#", class: "btn btn-success btn-xs start-conversation",
                              "data-sid" => current_student.id, "data-rip" =>  @vehicule.student_id %>

<% end -%>








