<%= form_for @electronics_computer, :html => { :class => "form-horizontal book",  } do |f| %>

  <% if @electronics_computer.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@electronics_computer.errors.count, "error") %> prohibited this electronic from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @electronics_computer.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div> 
  <% end %>
 
  <div class="form-group">
    <%= f.label :electronics_Title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :electronicsTitle, :class => 'form-control' , placeholder: "required", :required => true %>
    </div>
    <%=f.error_span(:electronicsTitle) %>
  </div>



  <div class="form-group">
    <%= f.label :electronics_Price, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :electronicsPrice, :class => 'form-control', placeholder: "USD", type: "number" %>
    </div>
    <%=f.error_span(:electronicsPrice) %>
  </div>






<div class="form-group">
      <%= f.label "Condition", class: 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.select(:condition, options_for_select([['New', 'new'], ['Used like new', 'Used like new'],
        ['Used very good', 'Used very good'], ['Used acceptable Used fair', 'Used acceptable Used fair'] ]), { include_blank: true }) %>
      </div>
    </div>


  <div class="form-group">
    <%= f.label :available_now, :class => 'control-label col-lg-2' %>
     
     <div class="col-lg-10">
     <%= f.radio_button :availableNow, 'true' %> 
     <%= label :true, 'yes' %>
      <%= f.radio_button :availableNow, 'false', :checked => true %>
      <%= label :false, 'no' %>
    </div>
    <%=f.error_span(:availableNow) %>
  </div>

 
  

  <div class="form-group">
    <%= f.label :electronics_photo, class: 'col-sm-2 control-label' %>
    <div class="col-lg-10"> <!-- class="col-sm-6" -->
      <%= f.file_field :electronicsphoto, :required => true, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                electronics_computers_path, :class => 'btn btn-default' %>
    </div>
  </div> 



<% end %>













