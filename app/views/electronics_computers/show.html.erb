 <%- model_class = Student -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.update', 'For Sale'] %></h1>
</div>
 
<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @electronics_computer.electronicsphoto.url(:medium) %>
        <div class="table-responsive"></div>
        <table class="table">
          <tbody> 
            <tr>
              <td><strong>Title:</strong></td>
              <td><%= @electronics_computer.electronicsTitle %> </td>
            </tr>
            <tr>
              <td><strong>Price:</strong></td>
              <td>$ <%=  @electronics_computer.electronicsPrice %> </td>
            </tr>
            <tr>
              <td><strong>Available Now:</strong></td>
              <% if @electronics_computer.availableNow? %>
                <td> Yes </td>
              <% else %>
                <td> No </td>
              <% end %>
            </tr>


              
      
     

            <tr>
              <td><strong>description:</strong></td>
              <td><%= @electronics_computer.electronisDescription %> </td>
            </tr>
            <tr>
              <td><strong>Seller email:</strong></td>
              <td><%= @electronics_computer.student_id%> </td>
            </tr>

          </tbody>
        </table>
        
      </div>

    </div>
  </div>

</div>
 
  <%  if (student_signed_in? && (current_student.id == @electronics_computer.student_id)) %>

            <%= link_to t('.back', :default => t("helpers.links.back")),
                          electronics_computers_path, :class => 'btn btn-default'  %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_electronics_computer_path(@electronics_computer), :class => 'btn btn-default' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                         electronics_computer_path(@electronics_computer),
                          :method => 'delete',
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-danger' %>
  
  

  <% end %>


<% if (student_signed_in? && (current_student.id != @electronics_computer.student_id)) %>  <!-- good one here -->

           <%= link_to "Send Message to Owner", "#", class: "btn btn-success btn-xs start-conversation",
                              "data-sid" => current_student.id, "data-rip" =>  @electronics_computer.student_id %>

<% end -%>












 





















































